func getActualWidgetTextColor as Color
{
	var textColor = widgetTextColor
	if textColor == null {
		if widgetBackgroundColor != null {
			if widgetBackgroundColor.isLightColor() {
				textColor = Color.black()
			}
			else {
				textColor = Color.white()
			}
		}
		else {
			textColor = Color.black()
		}
	}
	return textColor
}

