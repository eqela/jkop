func measureTextWidth(text as string) override as double
{
	if text == null:
		return 0.0
	var sz = lang "js" object {{{ this.ctx.measureText(text) }}}
	if sz == null:
		return 0.0
	var v = 0.0
	lang "js" {{{
		v = sz.width;
	}}}
	return v
}

