	var style as int
	if bold && italic {
		IFDEF "target_java" {
			style = lang "java" int {{{ android.graphics.Typeface.BOLD_ITALIC }}}
		}
		ELSE IFDEF "target_kotlin" {
			style = lang "kotlin" int {{{ android.graphics.Typeface.BOLD_ITALIC }}}
		}
	}
	else if bold {
		IFDEF "target_java" {
			style = lang "java" int {{{ android.graphics.Typeface.BOLD }}}
		}
		ELSE IFDEF "target_kotlin" {
			style = lang "kotlin" int {{{ android.graphics.Typeface.BOLD }}}
		}
	}
	else if italic {
		IFDEF "target_java" {
			style = lang "java" int {{{ android.graphics.Typeface.ITALIC }}}
		}
		ELSE IFDEF "target_kotlin" {
			style = lang "kotlin" int {{{ android.graphics.Typeface.ITALIC }}}
		}
	}
	else {
		IFDEF "target_java" {
