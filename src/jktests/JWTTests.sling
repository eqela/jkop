import jk.log
import jk.jwt
import jk.test
import jk.time
import jk.slon
import jk.random
import jk.base64

class is UnitTest:

func generateRandom64ByteKey as string
{
	var v = malloc 64
	for(var n=0; n<64; n++):
		v[n] = Random.getSharedInstance().nextIntegerWithMaximum(256) as uint8
	return Base64Encoder.encode(v)
}

func testHs256
{
	var key = generateRandom64ByteKey()
	println "[HS256] Using key: " .. key
	var jwt = new JWT()
	jwt.setAudience("http://test.audience")
	jwt.setExpirationTime(SystemClock.asUTCSeconds() + 60)
	var odata = SLONEncoder.toString(jwt.getClaims())
	ASSERT(String.isNotEmpty(odata))
	println "[HS256] Original claims: " .. odata
	var token = jwt.generateTokenWithHS256(String.toUTF8Buffer(key))
	ASSERT(String.isNotEmpty(token))
	println "[HS256] Token: " .. token
	var njwt = JWT.decode(token, new map { hs256 String.toUTF8Buffer(key) })
	ASSERT(njwt)
	var ndata = SLONEncoder.toString(njwt.getClaims())
	ASSERT(String.isNotEmpty(ndata))
	println "[HS256] Decoded claims: " .. ndata
	var wrongKey = generateRandom64ByteKey()
	ASSERT(String.equals(key, wrongKey) == false)
	println "[HS256] Using wrong key: " .. wrongKey
	var fjwt = JWT.decode(token, new map { hs256 String.toUTF8Buffer(wrongKey) })
	ASSERT(fjwt == null)
}

func execute override as bool
{
	START_TESTS()
	TEST("Test HS256 functionality", testHs256())
	END_TESTS()
}
