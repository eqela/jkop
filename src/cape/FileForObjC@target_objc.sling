func isFile override as bool
{
	var v as bool
	var isdir as bool
	lang "objc" {{{
		v = [manager fileExistsAtPath:path isDirectory:&isdir];
	}}}
	if(v == false) {
		return(false)
	}
	return(!isdir)
}

func isDirectory override as bool
