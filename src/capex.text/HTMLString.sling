class:

func sanitize(str as string) static as string
{
	assert str
	if String.indexOf(str, '<') < 0 && String.indexOf(str, '>') < 0 && String.indexOf(str, '&') < 0:
		return str
	var it = assert String.iterate(str)
	var sb = new StringBuilder()
	var c as char
	while((c = it.getNextChar()) > 0) {
		if c == '<' {
			sb.append("&lt;")
		}
		else if c == '>' {
			sb.append("&gt;")
		}
		else if c == '&' {
			sb.append("&amp;")
		}
		else {
			sb.append(c)
		}
	}
	return sb.toString()
}

func toQuotedString(str as string) static as string
{
	var sb = new StringBuilder()
	sb.append('"')
	if str {
		var it = String.iterate(str)
		while it {
			var c = it.getNextChar()
			if c < 1:
				break
			if c == '"' {
				sb.append('\\')
				sb.append('"')
			}
			else {
				sb.append(c)
			}
		}
	}
	sb.append('"')
	return sb.toString()
}
