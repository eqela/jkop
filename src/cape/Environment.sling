func getVariable(key as string) static as string
{
	if(key == null) {
		return(null)
	}
	IFDEF("target_cs") {
		var v as string
		lang "cs" {{{
			v = System.Environment.GetEnvironmentVariable(key);
		}}}
		return(v)
	}
	IFDEF("target_java") {
		var v as string
		lang "java" {{{
			v = java.lang.System.getenv(key);
		}}}
		return(v)
	}
	ELSE {
		var vars = getVariables()
		if(vars == null) {
			return(null)
		}
		return(Map.get(vars, key))
	}
}

