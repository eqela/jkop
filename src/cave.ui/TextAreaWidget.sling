				}
				setTextColor(textColor!!.toARGBInt32())
			}}}
		}
	}
	IFDEF "target_ios_objc" {
		var bgc #used = widgetBackgroundColor
		lang "objc" {{{
			if(bgc != nil) {
				self.backgroundColor = [bgc toUIColor];
			}
