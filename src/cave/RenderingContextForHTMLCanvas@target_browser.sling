func toCssCompatibleString(font as FontDescription) private as string
{
	assert font
	var sb = new StringBuilder()
	if font.getItalic() {
		sb.append("italic")
	}
	if font.getBold() {
		if sb.count() > 0:
			sb.append(' ')
		sb.append("bold")
	}
	var size = font.getSize()
	if size {
		if sb.count() > 0:
			sb.append(' ')
		sb.append(String.forInteger(size.toPoints(96)))
		sb.append("px")
	}
	var name = font.getName()
	if String.isNotEmpty(name) {
		if sb.count() > 0:
			sb.append(' ')
		sb.append(name)
	}
	return sb.toString()
}

func setFont(font as FontDescription) override
{
	var fonts as string
