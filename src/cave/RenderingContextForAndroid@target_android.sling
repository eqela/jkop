			tm = lang "java" !"android.graphics.Shader.TileMode" {{{ android.graphics.Shader.TileMode.CLAMP }}}
		}
		ELSE IFDEF "target_kotlin" {
			tm = lang "kotlin" !"android.graphics.Shader.TileMode" {{{ android.graphics.Shader.TileMode.CLAMP }}}
		}
