class:

const FILE_TYPE_UNKNOWN = 0
const FILE_TYPE_FILE = 1
const FILE_TYPE_DIR = 2

func forFile(file as File) static as this
{
	if file == null:
		return new this()
	return file.stat()
}

var file as File
var size as int
var createTime as long
var accessTime as long
var modifyTime as long
var ownerUser as int
var ownerGroup as int
var mode as int
var executable as bool
var type as int
var link = false

func setFile(v as File) virtual:
	file = v

func setSize(v as int) virtual:
	size = v

func setCreateTime(v as long) virtual:
	createTime = v

func setAccessTime(v as long) virtual:
	accessTime = v

func setModifyTime(v as long) virtual:
	modifyTime = v

func setOwnerUser(v as int) virtual:
	ownerUser = v

func setOwnerGroup(v as int) virtual:
	ownerGroup = v

func setMode(v as int) virtual:
	mode = v

func setExecutable(v as bool) virtual:
	executable = v

func setType(v as int) virtual:
	type = v

func setLink(v as bool) virtual:
	link = v

func getFile virtual as File:
	return file

func getSize virtual as int:
	return size

func getCreateTime virtual as long:
	return createTime

func getCreateTimeUTC as long:
	return createTime + SystemClock.getTimezoneOffsetAsSeconds()

func getAccessTime virtual as long:
	return accessTime

func getAccessTimeUTC as long:
	return accessTime + SystemClock.getTimezoneOffsetAsSeconds()

func getModifyTime virtual as long:
	return modifyTime

func getModifyTimeUTC as long:
	return modifyTime + SystemClock.getTimezoneOffsetAsSeconds()

func getOwnerUser virtual as int:
	return ownerUser

func getOwnerGroup virtual as int:
	return ownerGroup

func getMode virtual as int:
	return mode

func getExecutable virtual as bool:
	return executable

func getType virtual as int:
	return type

func getLink virtual as bool:
	return link

func isFile virtual as bool
{
	if type == FILE_TYPE_FILE:
		return true
	return false
}

func isLink virtual as bool:
	return link

func isDirectory virtual as bool
{
	if type == FILE_TYPE_DIR:
		return true
	return false
}

func exists virtual as bool:
	return isFile() || isDirectory() || isLink()
