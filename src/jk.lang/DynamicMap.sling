class is Duplicateable is Iterateable<string>:

IFDEF "target_sushi"
{
	var nullObject static as object = "null"
}

func asDynamicMap(value as dynamic) static as this
{
	assert value
	if value is this:
		return value as! this
	if value is map:
		return forMap(value as! map)
	return null
}

func forMap(map as map) static as this
{
	var v = new this()
	if map {
		var it = Map.iterateKeys(map)
		while it {
			var key = it.next()
			if key == null:
				break
			if key is string == false:
				continue
			v.setDynamic(key as! string, Map.getValue(map, key as! string))
		}
	}
	return v
}

func forStringMap(map as map<string,string>) static as this
{
	var v = new this()
	if map {
		var it = Map.iterateKeys(map)
		while it {
			var key = it.next()
			if key == null:
				break
			v.setString(key, Map.getValue(map, key))
		}
	}
	return v
}

func forDynamicMaps(map1 as this, map2 as this) static as this
{
	var v = new this()
	v.mergeFrom(map1)
	v.mergeFrom(map2)
	return v
}

func forDynamicMap(map as this) static as this
{
	assert map
	return map.duplicateMap()
}

func forData(map as this) static as this
{
	assert map
	return map.duplicateMap()
}

var map as map<string,dynamic>

ctor:
	map = new map<string,dynamic>

func asMap as map<string,dynamic>
{
	IFDEF "target_sushi" {
		var v = new map<string,dynamic>
		var it = iterateKeys()
		while it {
			var key = it.next()
			if not key:
				break
			Map.set(v, key, getDynamic(key))
		}
		return v
	}
	ELSE {
		return map
	}
}

func asStringMap as map<string,string>:
	return toStringMap()

func toStringMap as map<string,string>
{
	var v = new map<string,string>
	var it = iterateKeys()
	while it {
		var key = it.next()
		if not key:
			break
		Map.set(v, key, getString(key))
	}
	return v
}

func toMap as map
{
	var v = new map
	var it = iterateKeys()
	while it {
		var key = it.next()
		if not key:
			break
		Map.set(v, key, getDynamic(key))
	}
	return v
}

func duplicate as object:
	return duplicateMap()

func duplicateMap as this
{
	var v = new this()
	var it = iterateKeys()
	while it {
		var key = it.next()
		if key == null:
			break
		v.setDynamic(key, getDynamic(key))
	}
	return v
}

func mergeFrom(other as this) as this
{
	if other == null:
		return this
	var it = other.iterateKeys()
	while it {
		var key = it.next()
		if key == null:
			break
		setDynamic(key, other.getDynamic(key))
	}
	return this
}

func setDynamic(key as string, value as dynamic) as this
{
	if key {
		IFDEF "target_sushi" {
			if value == null {
				map[key] = nullObject
			}
			else {
				map[key] = value
			}
		}
		ELSE {
			map[key] = value
		}
	}
	return this
}

func setObject(key as string, value as object) as this:
	return setDynamic(key, value)

func setString(key as string, value as string) as this
{
	if key {
		IFDEF "target_sushi" {
			if value == null {
				map[key] = nullObject
			}
			else {
				map[key] = value
			}
		}
		ELSE {
			map[key] = value
		}
	}
	return this
}

func setBuffer(key as string, value as buffer) as this
{
	if key != null && value == null {
		IFDEF "target_sushi" {
			map[key] = nullObject
		}
		ELSE {
			map[key] = null
		}
		return this
	}
	return setObject(key, Buffer.asObject(value))
}

func setInteger(key as string, value as int) as this:
