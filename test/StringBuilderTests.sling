class is UnitTest:

import cape.unit

func testStringBuilderMethods
{
	var sb = new StringBuilder()
	sb.append(1)
	sb.append('a')
	sb.append(1.01)
	sb.append(1.01f)
	sb.clear()
	ASSERT(sb.count() == 0)
	sb.append("My Test String")
	ASSERT(sb.count() == 14)
	sb.remove(0, 3)
	ASSERT(sb.toString() == "Test String")
	ASSERT(sb.count() == 11)
	sb.removeLastCharacter()
	ASSERT(sb.toString() == "Test Strin")
	ASSERT(sb.count() == 10)
	sb.insert(0, "A ")
	ASSERT(sb.toString() == "A Test Strin")
}

func execute override:
	TEST("StringBuilder Methods", testStringBuilderMethods())
