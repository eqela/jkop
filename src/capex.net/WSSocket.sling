class abstract:

func create static as this
{
	IFDEF "target_browser" {
		return new WSSocketForBrowser()
	}
	ELSE {
		return new WSSocketGeneric()
	}
}

prop onOpenCallback as function<void>
prop onCloseCallback as function<void, WSCloseEvent>
prop onMessageCallback as function<void, WSMessage>
prop onErrorCallback as function<void, Error>

func connect(url as string) abstract
func send(message as WSMessage) abstract
func close abstract
func closeWithReason(statusCode as int, reason as string, callback as function) abstract
