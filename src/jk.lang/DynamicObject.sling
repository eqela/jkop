class:

class StringIteratorWrapper is Iterator<dynamic>
{
	pvar iterator as CharacterIterator

	func next as dynamic
	{
		if not iterator:
			return null
		var c = iterator.getNextChar()
		if Character.isEOF(c) {
			iterator = null
			return null
		}
		IFDEF "target_objc" {
			return lang "objc" dynamic {{{ [NSNumber numberWithUnsignedInt:c] }}}
		}
		ELSE {
			return c
		}
	}

	func hasNext as bool
	{
		assert iterator
		return not iterator.hasEnded()
	}
}

class BufferIteratorWrapper is Iterator<dynamic>
{
	pvar buffer as buffer
	pvar size as long
	var position = 0

	func next as dynamic
	{
		if not buffer:
			return null
		if position >= size:
			return null
		var v = buffer[position]
		position++
		IFDEF "target_objc" {
			return lang "objc" dynamic {{{ [NSNumber numberWithUnsignedInt:v] }}}
		}
		ELSE {
			return v
		}
	}

	func hasNext as bool
	{
		assert buffer
		assert position < size - 1
		return true
	}
}

