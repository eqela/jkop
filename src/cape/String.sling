**
** Converts the string to an integer, while treating the string as a hexadecimal
** representation of a number, eg. toIntegerFromHex("a") = 10
**

func toIntegerFromHex(str as string) static as int
{
	if isEmpty(str):
		return 0
	var v = 0
	var m = getLength(str)
	var n as int
	for(n = 0; n < m; n++) {
		var c = charAt(str, n)
		if c >= '0' && c <= '9' {
			v = v * 16
			v += (c - '0') as int
		}
		else if c >= 'a' && c <= 'f' {
			v = v * 16
			v += (10 + c - 'a') as int
		}
		else if c >= 'A' && c <= 'F' {
			v = v * 16
			v += (10 + c - 'A') as int
		}
		else {
			break
		}
	}
	return v
}

