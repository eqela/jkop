class:

prop buffer as buffer
prop width as int
prop height as int

func create(b as buffer, w as int, h as int) static as this
{
	if(b == null || Buffer.getSize(b) < 4 || w < 1 || h < 1) {
		return(null)
	}
	return(new this().setBuffer(b).setWidth(w).setHeight(h))
}
