const KEY_BACK = 34

prop action as int
prop keyCode as int
prop stringValue as string
prop shift as bool
prop control as bool
prop command as bool
prop alt as bool
var isConsumed public = false

func consume:
	isConsumed = true

func isKeyPress(key as int) as bool
{
	if action == ACTION_DOWN && keyCode == key:
		return true
	return false
}

func isKey(key as int) as bool
{
	if keyCode == key:
		return true
	return false
}

func isString(value as string) as bool
{
	if value == stringValue:
		return true
	return false
}

func isCharacter(value as char) as bool
{
	if stringValue != null && String.getChar(stringValue, 0) == value:
		return true
	return false
}

func clear
{
	action = 0
	keyCode = 0
	stringValue = null
	isConsumed = false
}
