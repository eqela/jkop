func iterate(value as dynamic) static as Iterator<dynamic>
{
	if value is string {
		var v = new StringIteratorWrapper()
		v.setIterator(String.iterate(value as! string))
		return v
	}
	if value is buffer {
		var v = new BufferIteratorWrapper()
		v.setBuffer(value as! buffer)
		v.setSize(sizeof value as! buffer)
		return v
	}
	if value is array {
		var v = new ArrayIteratorWrapper()
		v.setArray(value as! array)
		v.setSize(sizeof value as! array)
		return v
	}
	if value is vector {
		var v = new VectorIteratorWrapper()
		v.setVector(value as! vector)
		v.setSize(sizeof value as! vector)
		return v
	}
	if value is map:
		return iterate(Map.getValues(value as! map))
	return null
}

func iteratePropertyNames(object as dyno) static as Iterator<string>:
	return Vector.iterate(getPropertyNames(object))

func getPropertyNames(object as dyno) static as vector<string>
{
	assert object
	IFDEF "target_js" {
		var v = new vector<string>
		lang "js" {{{
			for(var name in object) {
				v.append(name);
			}
		}}}
		return v
	}
	ELSE {
		ERROR "Not implemented."
		return null
	}
}

func getPropertyValue(object as dyno, key as string) static as dynamic
{
	assert object
	assert key
	IFDEF "target_js" {
		return lang "js" dynamic {{{ object[key] }}}
	}
	ELSE {
		ERROR "Not implemented."
		return null
	}
}
