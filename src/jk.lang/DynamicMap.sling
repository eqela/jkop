func getDynamic(key as string) as dynamic
{
	var v = Map.getValue(map, key)
	IFDEF "target_sushi" {
		if v == nullObject:
			v = null
	}
	return v
}

func getObject(key as string) as object:
	return getDynamic(key) as object

func getString(key as string, defval as string = null) as string
{
	var v = String.asString(getDynamic(key))
	if v == null:
		return defval
