class is Sprite is Entity:

var sprite protected as Sprite
var layer protected as SpriteLayer

func createSprite virtual as Sprite:
	return null

func initialize override
{
	base.initialize()
	if layer == null:
		layer = scene as SpriteLayer
	initializeSprite()
}

func initializeSprite virtual
{
	if sprite == null && layer:
		sprite = createSprite()
}

func cleanup override
{
	base.cleanup()
	cleanupSprite()
	layer = null
}

func cleanupSprite virtual
{
	if sprite {
		sprite.removeFromContainer()
		sprite = null
	}
}

func onMoved(x as double, y as double) virtual
{
}

func move(x as double, y as double)
{
	if sprite:
		sprite.move(x, y)
	onMoved(x, y)
}

func resize(w as double, h as double)
{
	var ts = sprite as TextureSprite
	if ts:
		ts.resize(w, h)
}

func scale(scalex as double, scaley as double)
{
	if sprite:
		sprite.scale(scalex, scaley)
}

func setRotation(angle as double)
{
	if sprite:
		sprite.setRotation(angle)
}

func setAlpha(alpha as double)
{
	if sprite:
		sprite.setAlpha(alpha)
}

func getX as double
{
	if sprite:
		return sprite.getX()
	return 0.0
}

func getY as double
{
	if sprite:
		return sprite.getY()
	return 0.0
}

func getWidth as double
{
	if sprite:
		return sprite.getWidth()
	return 0.0
}

func getHeight as double
{
	if sprite:
		return sprite.getHeight()
	return 0.0
}

func getRotation as double
{
	if sprite:
		return sprite.getRotation()
	return 0.0
}

func getAlpha as double
{
	if sprite:
		return sprite.getAlpha()
	return 0.0
}

func getScaleX as double
{
	if sprite:
		return sprite.getScaleX()
	return 0.0
}

func getScaleY as double
{
	if sprite:
		return sprite.getScaleY()
	return 0.0
}

func removeFromContainer:
	remove()
