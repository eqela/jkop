func getContentsBuffer override as buffer
{
	var rr = getMyReader()
	if(rr == null) {
		return(null)
	}
	return(rr.readAll())
}

func getContentsString(encoding as string) override as string
{
	var b = getContentsBuffer()
	if(b == null) {
		return(null)
	}
	return(String.forBuffer(b, encoding))
}

