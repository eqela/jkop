				paint.setTextSize(android.util.TypedValue.applyDimension(android.util.TypedValue.COMPLEX_UNIT_PX, (float)pt, rs.getDisplayMetrics()));
			}}}
		}
		ELSE IFDEF "target_kotlin" {
