class:

const SIGHUP = 1
const SIGINT = 2
const SIGQUIT = 3
const SIGILL = 4
const SIGTRAP = 5
const SIGABRT = 6
const SIGFPE = 8
const SIGKILL = 9
const SIGSEGV = 11
const SIGPIPE = 13
const SIGALRM = 14
const SIGTERM = 15

func trapSignal(signum as int, enabled as bool) static as bool
{
	IFDEF "target_sushi" {
		var n = enabled ? 1 : 0
		var o = lang "lua" as int {{{
			_os:trap_signal(signum, n)
		}}}
		if o == 1:
			return true
		return false
	}
	ELSE {
		return false
	}
}

func checkSignalState(signum as int) static as bool
{
	IFDEF "target_sushi" {
		var n = lang "lua" as int {{{
			_os:check_signal_state(signum, n)
		}}}
		if n == 1:
			return true
		return false
	}
	ELSE {
		return false
	}
}
