class RadialGradientObject is GradientObject
{
	ctor(x0 as double, y0 as double, r0 as double, x1 as double, y1 as double, r1 as double)
	{
		this.x0 = x0
		this.y0 = y0
		this.r0 = r0
		this.x1 = x1
		this.y1 = y1
		this.r1 = r1
	}

	var x0 as double
	var y0 as double
	var r0 as double
	var x1 as double
	var y1 as double
	var r1 as double

	func toAndroidShader override as !"android.graphics.Shader"
	{
		var centerX = x0 + r0 as float
		var centerY = y0 + r0 as float
		var radius = r1 as float
		var tm as !"android.graphics.Shader.TileMode"
		IFDEF "target_java" {
			tm = lang "java" !"android.graphics.Shader.TileMode" {{{ android.graphics.Shader.TileMode.CLAMP }}}
