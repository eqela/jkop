name = "Jkop API Reference"
version = ""
introHeader = "Jkop - A multi-platform, multi-language software application framework"
templateDirectory = "apidoc_template"
inputFiles = [
	"cape/this.pling",
	"capex/this.pling",
	"capex.console/this.pling",
	"capex.mysql/this.pling",
	"cave/this.pling",
	"motion/this.pling",
	"sympathy/this.pling",
	"sympathy.web/this.pling"
]

namespaceDescriptions["cape"] = "The Jkop CAPE library (\"Common API for Everything\") provides the core fundamental framework for software application development, including features for data structures, string manipulation, filesystem access, I/O, threading and other commonly used operating system features."

namespaceDescriptions["capex"] = "The Jkop CAPEX library (\"CAPE Extensions\") extends the framework provided by CAPE, and adds several useful and commonly used utility features that are not part of the core framework, but are commonly used and provide good value for developers. This includes features such as XML processing, archive (ZIP) file handling, text template processing, encryption, vector and matrix mathematics, SQL database support, etc."

namespaceDescriptions["capex.console"] = "The capex.console library provides text-based command line features to applications, including terminal control, standard input/output, etc."

namespaceDescriptions["capex.mysql"] = "The capex.mysql package implements a MySQL driver for the capex library."

namespaceDescriptions["cave"] = "The Jkop CAVE library (\"CAPE Visual Extensions\") provides a graphical user interface (GUI) framework for multiple programming languages and operating systems. This includes commonly used GUI features and functionality, such as colors, fonts, forms, measurements and user interface controls."

namespaceDescriptions["motion"] = "The Jkop Motion library implements a multimedia engine, intended for gaming and other high performance graphical applications."

namespaceDescriptions["sympathy"] = "The Sympathy framework provides a complete network development framework for multiple programming languages and operating systems. Features include TCP/UDP sockets, protocol implementations (HTTP, DNS, SMTP, SSL), I/O multiplexing, URL encoding and decoding as well as custom protocol development."

namespaceDescriptions["sympathy.web"] = "The Sympathy web framework extends the base Sympathy framework and adds features used for implementing common requirements for web sites, web services and other web based applications. Features include a blog engine, wiki engine, directory based HTTP server functionality, authentication support, etc."

introText = "
= Welcome to the Jkop API reference =

Jkop is a comprehensive, general-purpose class library for software development, which can be used to
develop many kinds of software applications on multiple platforms, programming languages and operating
systems. Jkop provides a collection of libraries for several different purposes, and the developers can
choose which libraries to use for a particular kind of project.

= Further information =

In addition to this API documentation, the Eqela development community, EQDN ([http://eqdn.tech]), provides
many other documents, tutorials and references for Jkop and allows developers interact, collaborate and ask
questions:

@link http://eqdn.tech/jkop \"Read more Jkop documentation on EQDN\"

All Jkop libraries, tools and other materials can be downloaded from the Jkop website: [http://www.jkop.org]
"
