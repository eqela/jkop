ctor(context as GuiApplicationContext)
{
	IFDEF "target_android" {
		base((context as! GuiApplicationContextForAndroid).getActivityContext())
	}
	ELSE IFDEF "target_ios" {
		IFDEF "target_swift" {
			lang "swift" {{{
				super.init(frame: CGRect.zero)
				self.numberOfLines = 0
				self.textAlignment = NSTextAlignment.left
			}}}
		}
	}
	widgetContext = context
	setWidgetStyle(VALUE "__THIS__")
	IFDEF "target_ios" {
		IFDEF "target_objc" {
			lang "objc" {{{
				[self setNumberOfLines:0];
				[self setTextAlignment:UITextAlignmentLeft];
			}}}
		}
	}
	ELSE IFDEF "target_android" {
		IFDEF "target_java" {
			lang "java" {{{
				setGravity(android.view.Gravity.LEFT);
			}}}
		}
		ELSE IFDEF "target_kotlin" {
			lang "kotlin" {{{
				setGravity(android.view.Gravity.LEFT)
			}}}
		}
	}
	IFDEF "target_uwp" {
		textBlock = new !"Windows.UI.Xaml.Controls.TextBlock"()
		lang "cs" {{{
			this.Content = textBlock;
		}}}
	}
}

func setWidgetText(text as string) as this
{
	widgetText = text
	if not widgetText:
		widgetText = ""
	IFDEF "target_android" {
		IFDEF "target_java" {
			lang "java" {{{
				setText(widgetText);
			}}}
		}
		ELSE IFDEF "target_kotlin" {
			lang "kotlin" {{{
				setText(widgetText)
			}}}
		}
	}
	ELSE IFDEF "target_ios" {
		IFDEF "target_objc" {
			lang "objc" {{{
				[self setText:widgetText];
			}}}
		}
		ELSE IFDEF "target_swift" {
			lang "swift" {{{
				self.text = widgetText
			}}}
		}
	}
	ELSE IFDEF "target_html" {
		HTMLDOM.setTextContent(element, widgetText)
	}
	ELSE IFDEF "target_uwp" {
		lang "cs" {{{
			textBlock.Text = widgetText;
		}}}
	}
	ELSE IFDEF "target_reactjs" {
		lang "js" {{{
			this.forceUpdate();
		}}}
	}
	ELSE {
		ERROR "Not implemented"
	}
	Widget.onLayoutChanged(this)
	return this
}

func getWidgetText as string:
	return widgetText

